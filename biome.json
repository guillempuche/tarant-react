{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["dist"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noShadowRestrictedNames": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"complexity": {
				"noForEach": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": ["dist"]
	}
}
