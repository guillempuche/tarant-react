{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-react-pnpm",
      "type": "shell",
      // Change for `npm` if you don't use `pnpm`.
      "command": "pnpm",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/examples/library_of_text_quotes",
        "env": {
          // Prevent the opening of a browser tab with the React localhost.
          "BROWSER": "none"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        // "pattern": {
        //   "regexp": ".*",
        //   "file": 1,
        //   "location": 2,
        //   "message": 3
        // },
        "background": {
          "activeOnStart": true,
          // Beginning of the line containing...
          "beginsPattern": ".*compiled*",
          // Any line containing...
          "endsPattern": ".*Failed to compile.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "terminate-react-server",
      "type": "process",
      "command": "${command:workbench.action.tasks.terminate}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
